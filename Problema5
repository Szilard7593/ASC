assume cs:code, ds:data
data SEGMENT
    a db 1d, 2d, 3d, 4d, 5d, 6d, 7d, 8d
    l equ ($ - a)
    d db l -1  dup (?)

data ENDS

code SEGMENT
START:
    mov ax, data
    mov ds , ax
    mov es , ax

    mov si, offset a
    mov di, offset d
    mov cx, l-1
    jcxz final
    loopd:
        mov al, si[1]
        mov bl, si[0]
        sub al, bl
        mov [di], al
        inc si
        inc di
        loop loopd

    final:
        mov ax, 4C00H
        int 21h
code ENDS
END START