assume cs:code,ds:data
data segment
    a db 1d, 2d, 3d, 4d
    l equ $ - a
    d dw l - 1 dup (?)
data ends

code segment
Start:
    mov ax, data
    mov ds, ax
    mov es, ax
    
    mov si, offset a
    mov di, offset d
    mov cx, l - 1
    jcxz final
    loop_cerinta:
        mov al, si[0]
        mov bl, si[1]
        mul bl ; ax = a[i] * a[i+1]
        mov [di], ax
        inc si
        inc di
        inc di
        loop loop_cerinta

    final:
        mov ax, 4C00H
        int 21h

code ends
end Start